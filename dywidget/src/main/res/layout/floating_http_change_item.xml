<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_scene"
            android:drawablePadding="2dp"
            android:gravity="center"
            tools:text="线上环境"
            android:textColor="@color/page_title_color"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/iv_arrow"
            android:visibility="gone"
            android:layout_gravity="left"
            android:background="@drawable/dy_scene_arrow_icon"
            android:layout_width="32dp"
            android:layout_height="32dp" />
    </FrameLayout>

    <View
        android:background="@color/page_split_color"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <TextView
        android:padding="2dp"
        android:layout_gravity="center"
        android:id="@+id/tv_scene_change"
        android:text="点击切换"
        android:background="@drawable/dy_scene_net_button_bg"
        android:gravity="left|center_vertical"
        android:textColor="@color/page_sec_title_color"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tv_open_header_effect"
        tools:text="开启课程支持"
        android:textColor="@color/page_sec_title_color"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</LinearLayout>