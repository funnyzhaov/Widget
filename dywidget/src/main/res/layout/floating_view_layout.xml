<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_floating"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/dy_scene_box"
        android:textColor="#ffffff" />

    <LinearLayout
        android:id="@+id/ll_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/dy_scene_close_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="调试盒子"
                android:textColor="#212121" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f5f5f5" />

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_net"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/dy_scene_ays_icon" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#f5f5f5" />

            <ImageView
                android:id="@+id/iv_ays"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/dy_scene_net_icon" />
        </LinearLayout>


    </LinearLayout>

    <include android:id="@+id/net_change" layout="@layout/dy_scene_net_change_layout"/>
</LinearLayout>