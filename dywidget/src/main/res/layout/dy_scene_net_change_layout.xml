<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_broad"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_default_bg">
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dy_iv_back"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/dy_page_back"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:text="环境切换"
            android:gravity="center"
            android:textColor="@color/page_title_color"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/page_title_color"
            android:id="@+id/iv_channel_name"
            android:layout_marginRight="10dp"
            android:text="渠道dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_add_scene"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/dy_event_switch_add"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:paddingTop="10dp"
        android:id="@+id/change_http_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>